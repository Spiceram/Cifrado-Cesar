////Monomio Binomio
#include <iostream>
#include <string>

using namespace std;

class Cypher_Monomio
{
  public:
  string alf;
  
  Cypher_Monomio();
  string M_Cifrado(string message);
  string M_Descifrado(string cypher_message);
};

Cypher_Monomio::Cypher_Monomio()
{
  alf="D-ENAR-IOSBCFGHJKLMÃ‘PQTUVWXYZ.";
}

string Cypher_Monomio::M_Cifrado(string message)
{
  string cypher_message;
  int f1;
  for(int i = 0; i<message.length(); i++)
  {
    f1=alf.find(message[i]);
    f1+=1;
    if(f1 > 20)
      cypher_message += "7";
    if(f1 > 10 && f1 < 21)
      cypher_message += "2"; 
    cypher_message+=to_string (f1 % 10);  
  }
  return cypher_message;
}

string Cypher_Monomio::M_Descifrado (string cypher_message)
{
  string descypher_message;
  string e1;
  int e2;
  int lalf=alf.length();
  for(int i=0;i<cypher_message.length();i++)
  {
    if(cypher_message[i]=='7')
    {
      e1=cypher_message[i + 1];
      e2=stoi(e1);
      descypher_message+=alf[(e2+20%lalf)-1];
      i+=1;
    }
    else if(cypher_message[i]=='2')
    {
      e1=cypher_message[i + 1];
      e2=stoi(e1);
      descypher_message+=alf[(e2 + 10 % lalf)-1];
      i+=1;
    }
    else
    {
      e1=cypher_message[i];
      e2=stoi(e1);

      descypher_message+=alf[(e2 % lalf)-1];
    }
  }
  return descypher_message;
}

int main()
{
  Cypher_Monomio Monomio;
  string cypher_message,descypher_message;
  cout<<"Activar las mayusculas \nIngrese el mensaje a cifrar: ";
  string a;
  //a="AYMIMADREELBICHO";
  getline(cin,a);
  cypher_message = Monomio.M_Cifrado(a);
  descypher_message = Monomio.M_Descifrado(cypher_message);

  cout<<cypher_message<<"\n\n";
  cout<<descypher_message;
}
